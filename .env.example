# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Backend
PORT=3001

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001

# Redis (Optional - for rate limiting)
# 無料のRedisサービス: Upstash (https://upstash.com/), Redis Cloud, Render Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

# Rate Limiting
RATE_LIMIT_MINUTE=10      # 1分あたりの制限
RATE_LIMIT_DAILY=200      # 1日あたりの制限（無料枠）
ENABLE_GLOBAL_LIMIT=false # グローバル制限の有効化
GLOBAL_DAILY_LIMIT=5000   # 全体の1日制限
